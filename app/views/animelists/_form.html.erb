<%= simple_form_for animelist, url: anime_animelists_path(@anime), remote: true do |f| %>
  <%= f.input :status %>
  <%= f.input :episodes_watched %>
  <%= f.input :rewatched %>
  <div class="star-rating"></div>
  <hr>
  <%= f.submit %>
<% end %>

<script>
$('.star-rating').raty({
  path: '/assets/',
  scoreName: 'review[rating]'
});
</script>
