<%= simple_form_for [@anime, @animelist], :html => { :multipart => true }, remote: true do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :status,  collection: ["Currently Watching", "Plan to Watch", "Completed", "On Hold", "Dropped"] %>
    </div>
    <div class="large-6 columns">
      <%= f.input :rating, collection: 1..5, value: 1..5, input_html: { id: 'rating' } %>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <%= f.input :episodes_watched %>
    </div>
    <div class="large-6 columns">
      <%= f.input :rewatched %>
    </div>
  </div>
  <div class="row">
    <%= f.submit class: 'button' %>
  </div>
<% end %>
<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>" data-closable>
    <%= value %>
    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
