<%= simple_form_for [@anime, @animelist], :html => { :multipart => true }, remote: true do |f| %>
  <%= f.input :status,  collection: ["Currently Watching", "Plan to Watch", "Completed", "On Hold", "Dropped"] %>
  <%= f.input :episodes_watched %>
  <%= f.input :rewatched %>
  <%= f.input :rating, collection: 1..5 %>
  <hr>
  <%= f.submit %>
<% end %>


<script>
$('#star-rating').raty({
  path: '/assets/',
  scoreName: 'anime, animelist[rating]'
});
</script>
