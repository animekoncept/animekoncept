<div class="categories">
  <% @categories.each do |category| %>
    <div class="large-3 columns">
      <%= image_tag category.header_image.url(:large) %>
      <div class="category-name">
        <%= category.title %>
      </div>
      <div class="topic-count">
        <%= category.topics.count %>
      </div>
    </div>
  <% end %>
</div>
