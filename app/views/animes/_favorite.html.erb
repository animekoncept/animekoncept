<% if anime.marked_as_favorite? by: current_user  %>
  <%= link_to "unfavorite", unfavorite_anime_path(anime), method: :put, remote: true, class: 'favorite button expanded' %>
<% else%>
  <%= link_to "Favorite", favorite_anime_path(anime), method: :put, remote: true, class: 'favorite button expanded' %>
<% end %>
