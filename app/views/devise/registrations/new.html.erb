<section class='registration'>
  <div class='row'>
    <div class='medium-12 columns'>
      <h1>Your #1 Anime Source</h1>
      <h3>Find Anime from Crunchyroll and Funimation</h3>
    </div>
  </div>
  <div class='row'>
    <div class='medium-7 medium-centered columns'>
      <%= simple_form_for(:user, :url => registration_path(:user)) do |f| %>
        <div class='row'>
          <div class='medium-12 columns'>
            <%= f.input :username %>
          </div>
        </div>
        <div class='row'>
          <div class='medium-12 columns'>
            <%= f.input :email, required: true %>
          </div>
        </div>
        <div class='row'>
          <div class='small-12 medium-6 columns'>
            <%= f.input :password, required: true%>
          </div>
          <div class='small-12 medium-6 columns'>
            <%= f.input :password_confirmation, required: true %>
          </div>
        </div>
        <div class='row'>
          <div class='medium-12 columns'>
            <button class='button', type="submit">Sign up</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='medium-6 columns show-for-large'>
      <%= image_tag("chibi.png", class: 'robot') %>
    </div>
    <div class='medium-6 columns show-for-large'>
      <%= image_tag("killlakill.png", class: 'girl') %>
    </div>
  </div>
</section>
<section class='features'>
  <div class='row'>
    <div class='small-12 medium-4 columns'>
      <%= image_tag("feature-1.png") %>
      <h3>Mobile friendly</h3>
      <p>
        Check for Anime on the go with our amazing mobile friendly site.
        Compatible with all your devices for a beautiful high resolution experience.
      </p>
    </div>
    <div class='small-12 medium-4 columns'>
      <%= image_tag("feature-2.png") %>
      <h3>Anime streams</h3>
      <p>
        Want to watch your favorite Anime instantly? Anime Koncept will redirect you to legal sites such as Crunchyroll or Funimation to make
        sure you are getting the highest quality stream.
      </p>
    </div>
    <div class='small-12 medium-4 columns'>
      <%= image_tag("feature-3.png") %>
      <h3>Your own personal list</h3>
      <p>
        Save Anime or Manga to your list and keep track of the episodes you are on.
        You will never forget what you have been watching or repeatedly watched.
      </p>
    </div>
  </div>
</section>
<section class='previews show-for-medium'>
  <div class='row full-width'>
    <div class='previews-scroll'>
      <% Anime.all.each do |anime| %>
        <div>
          <%= image_tag anime.cover_image.url(:large) %>
          <button class='small button'><%= link_to "View Now", anime %></button>
        </div>
      <% end %>
    </div>
  </div>
</section>
