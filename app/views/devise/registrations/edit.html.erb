<div class="edit">
  <div class="row">
    <div class="medium-8 medium-centered columns">
      <h3 class="text-center">Account</h3>
      <hr>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="small-6 columns">
          <%= f.input :avatar, as: :file, :input_html => { :id => "input-file-now", class: 'file optional dropify'} %>
        </div>
        <div class="small-6 columns">
          <%= f.input :header_image, as: :file, :input_html => { :id => "input-file-now", class: 'file optional dropify'}, label: "Header" %>
        </div>
        <div class="small-3 columns">
          <label for="middle-label" class="text-right middle">Email:</label>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <label for="middle-label" class="text-right middle">Username:</label>
          <label for="middle-label" class="text-right middle">Password:</label>
          <label for="middle-label" class="text-right middle">Password Confirmation:</label>
          <label for="middle-label" class="text-right middle">Confirm Password</label>
          <label for="middle-label" class="text-right middle">Description:</label>
        </div>
        <div class="small-9 large-9 columns">
          <%= f.input :email, required: true, autofocus: true, label: false, id: 'middle-label' %>
          <%= f.input :username, required: true, autofocus: true, label: false, id: 'middle-label' %>
          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false %>
          <%= f.input :password_confirmation, required: false, label: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false %>
          <%= f.input :description, required: true, label: false, input_html: { preview: true, rows: 5 } %>
          <%= f.button :submit, "Update", class: 'button' %>
        </div>
      <% end %>
      <div class="small-12 columns">
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>
