
<div class="search-results">
  <div class="large-8 columns">
    <div class="media-object">
      <% @search.each do |search| %>
        <div class="large-12 columns">
          <div class="media-object-section">
            <div class="thumbnail">
              <%= link_to image_tag(search.searchable.cover_image.url(:medium)), search.searchable %>
            </div>
          </div>
          <div class="media-object-section">
            <div class="title"><%= search.searchable.title %></div>
            <div class="synopsis">
              <%= truncate(search.searchable.synopsis, length: 200) %>
              <br>
              <%= link_to "Read More", search.searchable %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="large-4 columns anime">
    <h3 class="text-center">Anime you might enjoy</h3>
    <% @animes.each do |anime| %>
      <div class="large-6 columns">
        <span data-tooltip aria-haspopup="true" class="has-tip right" data-disable-hover='false' tabindex=1 title="<%= anime.title %>">
          <%= link_to image_tag(anime.cover_image.url(:large)), anime %>
        </span>
      </div>
    <% end %>
  </div>
</div>
